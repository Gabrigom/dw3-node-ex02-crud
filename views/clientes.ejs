<%- include ('partials/navbar.ejs') %>
<%- include ('partials/header.ejs') %>

<div id="centralizaTexto">
    <div class="container">
        <div class="card">
            <div class="card-header">
                <h1>Cadastro de clientes</h1>
            </div>
            <div class="card-body">
                <form action="/clientes/new" method="post">
                    <label>Nome do cliente:</label>
                    <input type="text" name="nome" id="nome" placeholder="Insira o nome do cliente" class="form-control" required>
                    <label>CPF:</label>
                    <input type="text" name="cpf" id="cpf" placeholder="Insira o CPF do cliente" class="form-control" required>
                    <label>Endereço:</label>
                    <input type="text" name="endereco" id="endereco" placeholder="Insira o endereço do cliente" class="form-control" required>
                    <br>
                    <center><input type="submit" value="Cadastrar" class="btn btn-success"></center>
                </form>
                <hr>
            </div>
        </div>
    </div>
</div>
    <div class="container">
        <div class="card">
            <div class="card-header">
                <center><h1>Lista de Clientes</h1></center>
            </div>
            <div class="card-body">
                <table>
                    <thead>
                        <tr>
                            <th></th>
                            <th>Nome</th>
                            <th>CPF</th>
                            <th>Endereço</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% clientela.forEach(cliente=> { %>
                            <tr>
                                <td><i class="fa fa-address-book" aria-hidden="true"></i></td>
                                <td>
                                    <%= cliente.nome %>
                                </td>
                                <td>
                                    <%= cliente.cpf %>
                                </td>
                                <td>
                                    <%= cliente.endereco %>
                                </td>
                                <td>
                                    <a style="color: orange;"" href="/clientes/edit/<%= cliente._id %>">Editar</a>
                                </td>
                                <td>
                                    <a style="color: red;"" href="/clientes/delete/<%= cliente._id %>">Excluir</a>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<%- include ('partials/footer.ejs') %>